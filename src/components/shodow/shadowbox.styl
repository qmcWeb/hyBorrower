#shadowBox
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: rgba(13, 12, 39, 0.7);
  left: 0;
  top: 0;
  .main
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    .content
      width: 15rem;
      height: 8.1rem;
      box-sizing: border-box;
      background-color: #fff;
      color:  #49496A;
      font-size: .7rem;
      border-radius: .6rem;
      box-shadow: 0 .4rem 2.5rem 0;
      padding: 0 1.15rem;
      h3
        height: 2.85rem;
        line-height: 2.85rem;
        text-align: center;
        font-size: .9rem;
        font-weight: 600;
      .text
        font-size: .7rem;
        line-height: 1rem;
        text-align: center;
      .btn_box
        text-align: center;
        .btn
            width: 4.9rem;
            height: 2.2rem;
            background-color: #3D3BEE;
            border-radius: 2.2rem;
            line-height: 2.2rem;
            text-align: center;
            color: #fff;
            font-size: .8rem;
            margin-top: 1rem;
            display: inline-block;
            &.left
                background-color: #ACB3C7;
                margin-right: 1rem;
