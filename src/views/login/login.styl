#login
  background-color:  #F8F8F8;
  height: 100%;
  .main
    display: flex;
    align-items: center;
    flex-direction: column;
    padding-top: .5rem;
    height: 100%;
    position: relative

    .login_input_box
      width: 100%;
      box-sizing: border-box;
      padding: 0 .75rem;
      background-color: #fff;
      position: relative;
      .delete_active
        position: absolute;
        width: 20px;
        height 20px;
        right: 1.5rem;
        top: .825rem;
        background: url('../../assets/images/login/account_delete.png') no-repeat;
      .show_password
        position: absolute;
        width: 20px;
        height 20px;
        right: 1.5rem;
        top: .825rem;
        background: url('../../assets/images/login/show_password.png') no-repeat;
        background-size: contain;
      input
        font-size: .7rem;
        color: #49496A;
      &.account
        input
          border-bottom: 1px solid #F8F8F8;
      .login_input
        width: 100%;
        border: 0;
        height: 2.6rem;
    .login_btn
      width: 16.75rem;
      height: 2.5rem;
      background-color: rgba(61, 59, 238, 1);
      opacity: 0.3;
      text-align: center;
      line-height: 2.5rem;
      border-radius: 2.5rem;
      margin-top: 3%;
      &.active_btn
        opacity: 1;
      span
        border: none;
        color: #fff;
        font-size: .75rem;
    .control
      margin-top: 2.7%;
      width: 16.75rem;
      display: flex;
      justify-content: space-between;
      div
        font-size: .7rem;
        color: #ACB3C7;

    .err_message
      width: 7.95rem;
      height: 1.9rem;
      line-height: 1.9rem;
      text-align: center;
      background-color: #49496A;
      color: #fff;
      border-radius: 38px;
      font-size: .7rem;
      margin-top: .45rem;
    .footer
      width: 16.75rem;
      text-align: center;
      font-size: .7rem;
      color: #3D3BEE;
      position: absolute;
      bottom: 1.5rem;



