#openAccount
  background-color:  #F8F8F8;
  height: 100%;
  .main
    display: flex;
    align-items: center;
    flex-direction: column;
    height: 100%;
    position: relative;
    .top
      font-size: .7rem;
      color: #49496A;
      width: 16.8rem;
      margin: .75rem 0;
      line-height: 20px;
    .login_input_box
      width: 100%;
      box-sizing: border-box;
      padding: 0 .75rem;
      background-color: #fff;
      position: relative;
      input
        font-size: .7rem;
        color: #49496A;
      &.account
        input
          border-bottom: 1px solid #F8F8F8;
      &.password
        input
          border-bottom: 1px solid #F8F8F8;
      .login_input
        width: 100%;
        border: 0;
        height: 2.6rem;
    .login_btn
      width: 16.75rem;
      height: 2.5rem;
      background-color: rgba(61, 59, 238, 1);
      opacity: 0.3;
      text-align: center;
      line-height: 2.5rem;
      border-radius: 2.5rem;
      margin-top: 1rem;
      &.active_btn
        opacity: 1;
      span
        border: none;
        color: #fff;
        font-size: .75rem;
    .control
      margin-top: 1rem;
      width: 17.9rem;
      text-align: center;
      font-size: .65rem;
      color: #ACB3C7;
      span
        color: #1F1F00;

    .err_message
      width: 7.95rem;
      height: 1.9rem;
      line-height: 1.9rem;
      text-align: center;
      background-color: #49496A;
      color: #fff;
      border-radius: 38px;
      font-size: .7rem;
      margin-top: .45rem;
    .footer
      position: absolute;
      width: 16.75rem;
      text-align: left;
      font-size: .7rem;
      color: #49496A;
      top: 16.3rem;
      font-size: .7rem;
      line-height: 1rem;
      h3
        font-size: .7rem;
      .content
        color: #ACB3C7;
